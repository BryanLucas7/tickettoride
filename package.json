{
  "name": "tickettoride",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install": "npm install --ignore-scripts && npm run postinstall",
    "postinstall": "python -m pip install fastapi uvicorn python-multipart",
    "predev": "node -e \"const fs=require('fs');['backend/app/.games_cache.pkl','backend/app/.games_cache.pkl.bak'].forEach(f=>{try{fs.unlinkSync(f);}catch{}})\"",
    "dev": "concurrently --kill-others --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,green\" \"cd frontend && next dev\" \"cd backend && ../venv/bin/uvicorn app.api:app --host 0.0.0.0 --port 8000 --reload\"",
    "dev:frontend": "cd frontend && next dev",
    "dev:backend": "cd backend && uvicorn app.api:app --host 0.0.0.0 --port 8000 --reload",
    "build": "cd frontend && next build",
    "start": "cd frontend && next start",
    "lint": "cd frontend && next lint",
    "duplicates": "jscpd ./backend ./frontend --config .jscpd.json",
    "duplicates:frontend": "jscpd ./frontend --config .jscpd.json",
    "duplicates:backend": "jscpd ./backend --config .jscpd.json",
    "duplicates:python": "cd backend && pylint --enable=R0801 --min-similarity-lines=4 app/",
    "lint:sonar": "cd frontend && npx eslint ."
  },
  "dependencies": {
    "@eslint/js": "9.37.0",
    "eslint": "9.37.0",
    "eslint-plugin-react-hooks": "7.0.0",
    "eslint-plugin-react-refresh": "0.4.23",
    "globals": "16.4.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tw-animate-css": "1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.2.1",
    "eslint-config-next": "16.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jscpd": "^4.0.5",
    "knip": "^5.70.2",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "typescript": "^5",
    "typescript-eslint": "^8.48.0"
  }
}
